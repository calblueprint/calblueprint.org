.banner
  .banner-text
    h1.h0
      | Current Members
    p.subtitle
      |  Bloopers 
.row
  .small-12.small-centered.columns
    = link_to "Add Member", new_admin_member_path, class: "button"
    table.tables
      thead
        tr
          th
            | First Name
          th
            | Last Name
          th.column-remove-medium
            | Email
          th
            | Actions
      tbody
        - @members.each do |member|
          tr
            td
              = member.first_name
            td
              = member.last_name
            td.column-remove-medium
              = member.email
            td
              = link_to "", edit_admin_member_path(member), class: 'fa fa-pencil button'
              = link_to "", admin_member_path(member), method: :delete, class: 'fa fa-trash-o button'
    .spacer
