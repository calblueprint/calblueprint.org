<div class="spacer-small"></div>
<div class="banner">
  <div class="banner-text">
    <h1>Sign up</h1>
    <p class="subtitle">
    Let's get started.
    </p>
  </div>
</div>
<div class="spacer-small"></div>
<div class="row">
  <div class="medium-6 medium-centered columns centered">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input_field :email, required: true, autofocus: true %>
        <%= f.input_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
        <%= f.input_field :password_confirmation, required: true %>
      </div>
      <div class="spacer-small"></div>
      <%= render "nonprofits/shared/links" %>
      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "button full-width-button" %>
      </div>
    <% end %>
  </div>
</div>
<div class="spacer"></div>
