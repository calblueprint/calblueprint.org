= render "header"

.npo-login-container.container
  h1 Nonprofit Sign Up
  h2.subtitle.marginBot-xl Let's get started.
  = render "form_errors", obj: resource
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .form-inputs
      = f.input :organization_name, autofocus: true, required: false, placeholder: "My Awesome Org"
      = f.input :email, required: false, placeholder: "example@gmail.com"
      = f.input :password, placeholder: "********"
      = f.input :password_confirmation, placeholder: "********"
    = render "nonprofits/shared/links"
    .spacer-small
    .form-actions
      = f.button :submit, "Sign Up", class: "bp-btn marginTop-lg login-button"
